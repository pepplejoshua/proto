use io::writeln;
use strings::wrap_in_red;
fn panic(msg: str) {
    cpp { throw ProtoException(wrap_in_red("panic: " + msg)); }
}

fn assert_true(val: bool, reason: str) {
    if not val {
        panic(reason);
    }
}

fn assert_false(val: bool, reason: str) {
    if val {
        panic(reason);
    }
}   