fn add_2_to_ref(num: &i64) {
    num += 2;
}

fn add_2(num: i64) {
    num += 2;
}

fn main() {
    mut a = 0;
    mut b = &a;
    add_2(a);
    println(stringf("after add_2(a), a is still {#}", a));
    add_2_to_ref(b);
    println(stringf("after add_2_to_ref(b), a is now {#}", a));
    println(stringf("b is also the same as a which is {#}", *b));
}
