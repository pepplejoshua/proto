fn sum(arr: [i64]) -> i64 {
    mut sum = 0;

    for mut i = 0; i < len(arr); i += 1 {
        sum += arr[i];
    }

    sum
}

fn main() -> str {
    let a = [0, 1, 2, 3, 4, 5];
    let fmt = "{#}"; mut out = "Array of (";
    for mut i = 0; i < len(a); i += 1 {
        let item = a[i];
        out += sprintf(fmt, item);
        if i + 1 < len(a) {
            out += ", ";
        }
    }
    out += ")";
    sprintf("The sum of {#} is {#}{#}", out, sum(a), '.')
}
