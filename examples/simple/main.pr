@lib("std");
@use("next");

// constants
a : int : 1;
b :: a + 2;

// variables
c := b + a + 4;

d :: (c + a);

// functions
main :: fn () -> void {
  age :: next.forward(23);
  name :: "joshua";
  josh := user.(name, age);
}

// struct type
